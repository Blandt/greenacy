<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	  
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% if(notice) %><div id="notice" class="alert alert-warning"><%= notice %></div><% end %>
				<div class="col-md-3 col-sm-3">
  					<%= render :partial => 'layouts/sidemenu_manage' %>
  				</div>
  				<div class="col-md-9 col-sm-9">
  					<div class="right-pan">
						
						<div class="row">
							<div class="col-md-8">
								<h4>Activity Log</h4>
							</div>
							<div class="col-md-4">
								<a class="btn btn-border" style="float:right;" href="/users/manage">Back</a>
							</div>
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							<div class="col-lg-12">
							<table class="table table-bordered table-striped table-condensed">
							  
							  
							<tbody>	
							<% if(!@activity_logs.blank?) %>
							  <% @activity_logs.each do |order| %>
							  <tr>
								<td><%= order.note %> - <p style="float:right"><%= order.created_at.strftime("%B %d,%Y %I:%M%p") %></p></td>
								
							  </tr> 
							  <% end %>
								
							<% else %>
								<tr><td colspan="7" style="text-align:center"><b>No Activity found</b></td></tr>
							<% end %>
							<tbody>
							</table>
							</div>
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>


	
	

