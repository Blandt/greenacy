<div class="page-heading">
            <h3>
               Editing Company
            </h3>
			<% @company.errors.full_messages.each do |msg| %>
			    <li class="error msg"><%= msg %></li>
		    <% end %>
</div>

<div class="wrapper">
        <div class="row">
			<div class="col-sm-12">
				<section class="panel">
					<header class="panel-heading">
						Edit Company
					</header>
					<div class="panel-body">

<%= form_for(@company, :url => admin_company_path, :id => @company.id) do |f| %>

    <div class="field">
	<label for="company_is_active"></label><br>
	<select name="company[is_active]" required id="company_is_active" >
		<option value="1" <% if(@company.is_active==true) %>selected="selected"<% end %>>Active</option>
		<option value="0" <% if(@company.is_active==false) %>selected="selected"<% end %>>Inactive</option>
	</select>
	</div>
	
	<div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
    </div>
	
	<div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
    </div>
	
	<div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
    </div>
	
	<div class="field">
    <%= f.label :contact_number %><br />
    <%= f.text_field :contact_number %>
    </div>
	
	<div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
    </div>
	
	<div class="field">
    <%= f.label :city %><br />
    <%= f.text_field :city %>
    </div>
	
	<div class="field">
    <%= f.label :state %><br />
    <%= f.text_field :state %>
    </div>
	

	
	<div class="field">
    <%= f.label :zip_code %><br />
    <%= f.text_field :zip_code %>
    </div>
	
	<p><strong>Pt Low: </strong><%= @pt[:low] %> | <strong>Pt High: </strong><%= @pt[:high] %> | <strong>Pt Bid: </strong><%= @pt[:bid] %> | <strong>Pt Ask: </strong><%= @pt[:ask] %></p>
	<div class="field">
	<%= f.label :value_troy_pt %><br />
	<%= f.text_field :value_troy_pt %> 
	</div>

	<p><strong>Pd Low: </strong><%= @pd[:low] %> | <strong>Pd High: </strong><%= @pd[:high] %> | <strong>Pd Bid: </strong><%= @pd[:bid] %> | <strong>Pd Ask: </strong><%= @pd[:ask] %></p>
	<div class="field">
	<%= f.label :value_troy_pd %><br />
	<%= f.text_field :value_troy_pd %> 
	</div>

	<p><strong>Rh Low: </strong><%= @rh[:low] %> | <strong>Rh High: </strong><%= @rh[:high] %> | <strong>Rh Bid: </strong><%= @rh[:bid] %> | <strong>Rh Ask: </strong><%= @rh[:ask] %></p>
	<div class="field">
	<%= f.label :value_troy_rh %><br />
	<%= f.text_field :value_troy_rh %> 
	</div>
	
	<div class="field">
	<%= f.label :stainless_steel_price %><br />
	<%= f.text_field :stainless_steel_price %> 
	</div>
	
	<!--<div class="field">
    <%= f.label :is_active %><br />
    <%= f.check_box :is_active %>
    </div>	-->

    <%= f.submit %>
	<%= link_to 'Show', admin_company_path(@company), :class=>'btn btn-primary' %>
	<%= link_to 'Back', admin_companies_path, :class=>'btn btn-primary' %>
<% end %>

					</div>
				</section>
			</div>
		</div>
</div>