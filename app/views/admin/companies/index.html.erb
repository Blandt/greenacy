<div class="page-heading">
            <h3>
                Companies
            </h3>
            <ul class="breadcrumb">
                
            </ul>
			<p id="notice"><%= notice %></p>
</div>
<div class="wrapper">
        <div class="row">
			<div class="col-sm-12">
				<section class="panel">
					<header class="panel-heading">
						<%= 'Companies' %>
					</header>
					<div class="panel-body">
						<table class="table table-bordered table-striped table-condensed">
						  <thead>
							<tr>
							  <th width="15%">Name</th>
							  <th width="60%">Description</th>
							  <th width="10%">Is active</th>
							  <th width="15%">Action</th>
							</tr>
						  </thead>

						  <tbody>
							<% @companies.each do |company| %>
							  <tr>
								<td><%= company.name %></td>
								<td><%= company.description %></td>
								<td><%= company.is_active %></td>
								<td><%= link_to 'Show', admin_company_path(company) %> |<%= link_to 'Edit', edit_admin_company_path(company) %> | <%= link_to 'Destroy', admin_company_path(company), data: { confirm: 'Are you sure?' }, :method => :delete %></td>
								
							  </tr>
							<% end %>
						  </tbody>
						</table>
						

						<br />

						
					</div>
				</section>
			</div>
		</div>
</div>	


