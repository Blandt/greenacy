<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% @user.errors.full_messages.each do |msg| %>
					<div class="alert alert-warning"><%= msg %></div>
				<% end %>
				<div class="col-md-3 col-sm-3">
  					<%= render :partial => 'layouts/sidemenu_manage' %>
  				</div>
  				<div class="col-md-9 col-sm-9">
  					<div class="right-pan">
						
						<div class="row">
							<div class="col-md-8">
								<h4>Change User Password</h4>
							</div>
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							
							

							<%= form_for(@user, :url => users_changeupdatepwd_path(@user.id), :id => @user.id) do |f| %>
							<%= f.hidden_field :user_id, :value => @user.id %>
														
							<div class="form-group">
								<label for="" class="col-sm-3 control-label">Password <% if @minimum_password_length %>
									<em>(<%= @minimum_password_length %> characters minimum)</em>
									<% end %></label>
								<div class="col-sm-9">
								    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
								</div>
							</div>

							<div class="form-group">
								<label for="" class="col-sm-3 control-label">Confirm Password</label>
								<div class="col-sm-9">
								  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
								</div>
							</div>
							
							<div class="form-group">
								<div class="col-sm-offset-3 col-sm-9">
									<input type="submit" class="btn btn-primary" value="Save Changes">
								</div>
							</div>
							
							<% end %>

							
							
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>

