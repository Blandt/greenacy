<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% if(notice) %><div id="notice" class="alert alert-warning"><%= notice %></div><% end %>
				<div class="col-md-3 col-sm-3">
  					<%= render :partial => 'layouts/sidemenu_manage' %>
  				</div>
  				<div class="col-md-9 col-sm-9">
  					<div class="right-pan">
						<div class="row">
							<div class="col-md-8">
								<h4>List Of Users</h4>
							</div>
							<div class="col-md-4">
								<!--<a class="btn btn-border" style="float:right;" href="/orders/archive">Archive</a>-->
							</div>
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							<table class="table table-bordered table-striped table-condensed">
							  <thead>
							  <tr>
								<th>First Name</th>
								<th>Last Name</th>
								<th>Email</th>
								<th>Username</th>
								<th>Action</th>
							  </tr>
							  </thead>
							  
							<tbody>	
							<% @users.each do |user| %>
							  <tr>
								<td><%= user.first_name %></td>
								<td><%= user.last_name %></td>
								<td><%= user.email %></td>
								<td><%= user.username %></td>
								<td><%= link_to 'Edit', users_change_path(user) %> | <%= link_to 'Change Password', users_changepwd_path(user) %> | <a href="/users/userdelete/<%= user.id %>" onclick="return confirm('Are you sure?')" >Delete</a>  | <a href="/orders/team/<%= user.id %>">Orders</a>  | <!--<a href="/orders/team/<%= user.id %>.csv">Export Csv</a> |--> <a href="/orders/archivelist/<%= user.id %>">Archive List</a> | <a href="/activity_logs/list/<%= user.id %>">Activity Log</a></td>
							  </tr> 
							<% end %>
							<tbody>
							</table>
							
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>

