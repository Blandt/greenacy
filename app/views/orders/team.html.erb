<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	  
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% if(notice) %><div id="notice" class="alert alert-warning"><%= notice %></div><% end %>
				
  				<div class="col-md-12 col-sm-12">
  					<div class="right-pan">
						
						<div class="row">
							<div class="col-md-8">
								<h4>Orders List</h4>
							</div>
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							<div class="col-lg-12">
							<table class="table table-bordered table-striped table-condensed">
							  <thead>
							  <tr>
								<th style="text-align:center">Order Id</th>
								<th style="text-align:center">Company Name</th>
								<th style="text-align:center">Company Phone Number</th>
								<th style="text-align:center">Date</th>
								<th style="text-align:center">Price</th>
								<th style="text-align:center">Quantity</th>
								<th style="text-align:center">Action</th>
							  </tr>
							  </thead>
							  
							<tbody>	
							<% if(!@orders.blank?) %>
							  <% @orders.each do |order| %>
							  <tr>
								<td><%= order.view_order_id %></td>
								<td><%= order.company.name %></td>
								<td><%= order.company.contact_number %></td>
								<td><%= order.start_date %></td>
								<td>$<%= number_with_precision(order.total_price, :precision => 2) %></td>
								<td><%= order.quantity %></td>
								<td style="text-align:center;">
									<a href="/order_details/view/<%= order.id %>"  >View</a> | 
									<!--<% if (!order.is_closed)%>
										<a href="/orders/orderclose/<%= order.id %>" onclick="return confirm('Are you sure you want to close?')" >Close Order</a> |
									<% else %>
										<a href="/orders/startorder/<%= order.id %>" onclick="return confirm('Are you sure you want to start order?')" >Start Order</a> |
									<% end %>-->
									<a href="/orders/archiveeach/<%= order.id %>">Archive</a> |
									<a href="/order_details/edit/<%= order.id %>">Edit</a> |	
									<a href="/orders/orderdelete/<%= order.id %>" onclick="return confirm('Are you sure you want to delete?')" >Delete</a>
								</td>
							  </tr> 
							  <% end %>
								
							<% else %>
								<tr><td colspan="7" style="text-align:center"><b>No order found</b></td></tr>
							<% end %>
							<tbody>
							</table>
							</div>
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>


	
	

