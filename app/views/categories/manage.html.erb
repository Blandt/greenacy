<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% if(notice) %><div id="notice" class="alert alert-warning"><%= notice %></div><% end %>
				<div class="col-md-3 col-sm-3">
  					<%= render :partial => 'layouts/sidemenu_manage' %>
  				</div>
  				<div class="col-md-9 col-sm-9">
  					<div class="right-pan">
						<div class="row">
							<div class="col-md-8">
								<h4>Manage Category</h4>
							</div>
							<div class="col-md-4" >
								<a href="/categories/addnew/" class="btn btn-border" style="float:right;margin-right:10px;"> Add Category </a>
								
							</div>
							
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							<table class="table table-bordered table-striped table-condensed">
							  <thead>
							  <tr>
								<th>Name</th>
								<th>Price</th>
								<th>Action</th>
							  </tr>
							  </thead>
							  
							<tbody>	
							<% @cat.each do |cat| %>
							  <tr>
								<td><%= cat.name %></td>
								<td><%= cat.price %></td>
								<td><a href="/categories/change/<%= cat.id%>">Edit</a></td>
							  </tr> 
							<% end %>
							<tbody>
							</table>
							
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>

