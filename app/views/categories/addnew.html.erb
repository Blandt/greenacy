<style>
.left-pan ul{margin-left: 0px;
    padding-left: 0px;}
.left-pan ul li{    
list-style: none;
border-bottom: 1px solid #cbcbcb;
padding: 10px 0px;
}	
	
</style>
<section class="about-us">
  		<div class="container">
  			<div class="row">
  				<% @category.errors.full_messages.each do |msg| %>
					<div class="alert alert-warning"><%= msg %></div>
				<% end %>
				<div class="col-md-3 col-sm-3">
  					<%= render :partial => 'layouts/sidemenu_manage' %>
  				</div>
  				<div class="col-md-9 col-sm-9">
  					<div class="right-pan">
						
						<div class="row">
							<div class="col-md-8">
								<h4>Add Category</h4>
							</div>
							
						</div>
						
						<div class="row">
							<div class="col-lg-12"><hr></div>
							
							

							
							<form name="addnew" id="addnew">
							<div class="form-group">
								<label for="" class="col-sm-3 control-label">Name</label>
								<div class="col-sm-9">
									<input type="text" name="category[name]" id="category_name" value="">
									
								</div>
							</div>

							<div class="form-group">
								<label for="" class="col-sm-3 control-label">Price</label>
								<div class="col-sm-9">
								  <input type="text" name="category[price]" id="category_price" value="">
								  
								</div>
							</div>
							
							<div class="form-group">
								<div class="col-sm-offset-3 col-sm-9">
									<input type="button" onclick="addCat()" class="btn btn-primary" value="Save Changes">
								</div>
							</div>
							

							
							
						</div>
						
  					</div>
  				</div>
  			</div>
  		</div>
  	</section>
<script>
function addCat(){
	var price = $('#category_price').val();
	var name = $('#category_name').val();
	$.ajax({
					url: "/categories/addCat",
					type: 'POST',
					beforeSend: function(xhr) {xhr.setRequestHeader('X-CSRF-Token', $('meta[name="csrf-token"]').attr('content'))},
					data: {'name':name,'price':price},
					success: function(res)
					{
						console.log(res);
						window.location.href = '/categories/manage';
					}
			   });
}
</script>
